{
  "name": "QuickClip URL",
  "version": "1.0.1",
  "manifest_version": 3,
  "description": "Quickly copy the current tab's URL with a keyboard shortcut",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "copy-url": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Command+Shift+X"
      },
      "description": "Copy current tab URL"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "clipboardWrite"
  ]
}